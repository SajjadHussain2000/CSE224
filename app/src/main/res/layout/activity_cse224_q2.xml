<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF1E898"
    tools:context=".CSE224_Q2">

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Edit"
        android:textSize="20dp"
        android:textColor="#E34040"
        android:gravity="center"/>
    <RadioGroup
        android:id="@+id/radioGrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/et1">
        <RadioButton
            android:id="@+id/rdb1"
            android:textColor="#E34040"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Radio 1"/>
        <RadioButton
            android:id="@+id/rdb2"
            android:textColor="#E34040"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Radio 2"/>
        <RadioButton
            android:id="@+id/rdb3"
            android:textColor="#E34040"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Radio 3"/>
        <RadioButton
            android:id="@+id/rdb4"
            android:textColor="#E34040"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Radio 4"/>
    </RadioGroup>

    <CheckBox
        android:id="@+id/chk1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E34040"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/radioGrp"
        android:text="Check 1"/>
    <CheckBox
        android:id="@+id/chk2"
        android:layout_below="@+id/chk1"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E34040"
        android:text="Check 2"/>
    <CheckBox
        android:id="@+id/chk3"
        android:layout_below="@+id/chk2"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E34040"
        android:text="Check 3"/>
    <CheckBox
        android:id="@+id/chk4"
        android:layout_below="@+id/chk3"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E34040"
        android:text="Check 4"/>
    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chk4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Submit button"
        android:backgroundTint="#D1C7C7"
        android:textColor="#E34040"/>



</RelativeLayout>